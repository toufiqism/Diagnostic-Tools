<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <corners android:radius="3dp" />

            <gradient android:angle="270" android:centerColor="@color/generic_blue" android:centerX="35%" android:endColor="@color/generic_blue" android:startColor="@color/generic_blue" android:type="linear" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <stroke android:width="1dp" android:color="#605959" />
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="3dp" />

            <gradient android:angle="270" android:centerColor="#ff433c" android:centerX="35%" android:endColor="#fffd554d" android:startColor="#fffd554d" android:type="linear" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <stroke android:width="1dp" android:color="#645e5e" />
        </shape>
    </item>

</selector>